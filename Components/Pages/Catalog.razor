@page "/catalog"

<h2 class="catalog-title">📖 Каталог товаров</h2>

<table class="catalog-table">
    <thead>
        <tr>
            <th>Фото</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена (₸)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in CatalogItems)
        {
            <tr>
                <td><img src="@item.Image" alt="@item.Name"></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("N0") ₸</td>
            </tr>
        }
    </tbody>
</table>

